{
  "name": "@ifings/metatron3",
  "version": "0.1.2",
  "private": false,
  "description": "iFings Design System",
  "repository": "https://github.com/ifings/metatron3.git",
  "license": "MIT",
  "author": "Tiaan du Plessis <tiaanduplessis@hotmail.com>",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "babel src --ignore src/stories --out-dir dist",
    "format": "prettier --write '**/*.js'",
    "lint:package": "sort-package-json",
    "start": "start-storybook -p 9009 -s public",
    "storybook": "build-storybook -s public",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn format",
      "git add"
    ],
    "package.json": [
      "yarn lint:package",
      "git add"
    ]
  },
  "browserslist": {
    "production": [
      ">0.1%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "^.+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/file.js"
    },
    "snapshotSerializers": [
      "jest-emotion"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.mdx$": "@storybook/addon-docs/jest-transform-mdx"
    }
  },
  "dependencies": {
    "@emotion/core": "^10.0.28",
    "polished": "^3.6.3",
    "prop-types": "^15.7.2",
    "react-accessible-dropdown-menu-hook": "^2.1.0",
    "theme-ui": "^0.3.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.5",
    "@babel/plugin-transform-react-jsx": "^7.9.4",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-react": "^7.9.4",
    "@emotion/babel-plugin-jsx-pragmatic": "^0.1.5",
    "@storybook/addon-a11y": "^5.3.18",
    "@storybook/addon-actions": "^5.3.18",
    "@storybook/addon-docs": "^5.3.18",
    "@storybook/addon-links": "^5.3.18",
    "@storybook/addon-storyshots": "^5.3.18",
    "@storybook/addon-storysource": "^5.3.18",
    "@storybook/addon-viewport": "^5.3.18",
    "@storybook/addons": "^5.3.18",
    "@storybook/preset-create-react-app": "^2.1.1",
    "@storybook/react": "^5.3.18",
    "@theme-ui/style-guide": "^0.3.0",
    "auto": "^9.30.1",
    "babel-jest": "^25.4.0",
    "cross-env": "^7.0.2",
    "husky": "^4.2.5",
    "jest": "^25.4.0",
    "jest-emotion": "^10.0.32",
    "lint-staged": "^10.1.7",
    "microbundle": "^0.12.0",
    "prettier": "^2.0.5",
    "react-scripts": "3.4.1",
    "react-test-renderer": "^16.13.1",
    "sort-package-json": "^1.42.1",
    "webpack-merge": "^4.2.2"
  },
  "peerDependencies": {
    "react": "^16",
    "react-dom": "^16",
    "react-feather": "^2.0.8"
  },
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  }
}
